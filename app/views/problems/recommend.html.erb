<div class="header">
  <h1><%= @user.username %></h1>
  <h2>Tier <%= @user.tier / 100 %> (<%= @user.tier % 100 %>%)</h2>
</div>
<div class="content">
  <div class="pure-g">
<% @problems.each do |level, problems| %>
    <div class="pure-u-1-4">
      <h2>☆ <%= level / 100.0 %></h2>
      <table class="pure-table pure-table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>☆</th>
          </tr>
        </thead>
        <tbody>
<% problems.each do |p| %>
        <tr>
          <td><a href="https://www.acmicpc.net/problem/<%= p.id %>" target="_blank"><%= p.id %></a></td>
          <td><%= p.level / 100.0 %></td>
        </tr>
<% end %>
        </tbody>
      </table>
    </div>
<% end %>
  </div>
</div>
