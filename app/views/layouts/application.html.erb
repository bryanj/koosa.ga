<!DOCTYPE html>
<html>
  <head>
    <title>BOJ Tier</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="layout">
      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="/">BOJ Tier</a>
          <ul class="pure-menu-list">
            <li class="pure-menu-item"><a class="pure-menu-link" href="/login"><%= session[:username] || "Login" %></a></li>
            <li class="pure-menu-item menu-item-divided"><a class="pure-menu-link" href="<%= if session[:username] then "/users/#{session[:username]}" else "/login" end %>">Status</a></li>
            <li class="pure-menu-item"><a class="pure-menu-link" href="#">Recommends</a></li>
            <li class="pure-menu-item menu-item-divided"><a class="pure-menu-link" href="/users">Ranking</a></li>
            <li class="pure-menu-item"><a class="pure-menu-link" href="#">Problems</a></li>
          </ul>
        </div>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
